<style>
    .container {
        line-height: 2.375;
    }

    i {
        display: inline-block;
        margin-right: 1em;
    }

    .fading {
        animation: fadingText 4s infinite;
    }

    .brand {
        display: inline-flex;
        max-width: 80px;
    }

    .nav-link {
        color: #d7d7d7 !important;
    }

    ul li {
        padding-left: 0.5rem;
    }

    .bgBackground {
        background-color: #212931;
    }

    @@keyframes fadingText {
        0%, 100% {
            color: #a2a8d3;
        }

        20%, 80% {
            color: #eee;
        }
    }
</style>
<nav class="navbar navbar-expand-sm navbar-toggleable-sm bgBackground box-shadow">
    <div class="container">
        @* <a class="navbar-brand" style="font-size:1.2rem" href="">2ndSoft</a>*@
        <button class="navbar-toggler" type="button" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
            <ul class="navbar-nav flex-grow-1" style="white-space: nowrap;">
                <li class="nav-item" style="padding-top:0;">
                    <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                        <img class="brand" src="./images/logo/2nd Home Logo Border.png" />
                    </NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="PortFolio">
                        <a class="fas" style="height:2rem;"> <img src="./Images/Portfolio_Icon.png" style="width:20px; height:20px" /></a>
                        &nbsp;&nbsp; Portfolio
                    </NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" @onclick="()=>expandSubNav = !expandSubNav">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> Projects
                    </NavLink>
                    @if (expandSubNav)
                    {
                    <li class="nav-item">
                        <NavLink class="nav-link" href="Barmate" @onclick="()=>expandSubNav = !expandSubNav">
                            <i class="fas fa-solid fa-champagne-glasses"></i> Barmate
                        </NavLink>
                    </li>
                    <li class="nav-item">
                        <NavLink class="nav-link" href="MicroPortal" @onclick="()=>expandSubNav = !expandSubNav">
                            <i class="fas fa-solid fa-vial"></i> MicroPortal
                        </NavLink>
                    </li>
                    <li class="nav-item">
                        <NavLink class="nav-link" target="_blank" href="http://fitmate.secondsoft.nl/" @onclick="()=>expandSubNav = !expandSubNav">
                            <a class="fas" style="height:2rem;"> <img src="./Images/Fitmatlogosmall32_white.png" style="width:20px; height:20px" /></a>
                            &nbsp;&nbsp; Fitmate &nbsp;<i class="fa-solid fa-up-right-from-square"></i>
                        </NavLink>
                    </li>
                    <li class="nav-item">
                        <NavLink class="nav-link" target="_blank" href="https://logservice.secondsoft.nl/" @onclick="()=>expandSubNav = !expandSubNav">
                            <a class="fas" style="height:2rem;"> <img src="./Images/logo/2ndLogWhite.png" style="width:20px; height:20px" /></a>&nbsp;  2ndLog &nbsp; <i class="fa-solid fa-up-right-from-square"></i>
                        </NavLink>
                    </li>
                    }
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link fading" href="UnderConstruction">
                        <i class="fas fa-solid fa-person-digging"></i>Me at work
                    </NavLink>
                </li>
            </ul>
        </div>
    </div>
</nav>

@code {
    bool collapseNavMenu = true;
    private bool expandSubNav;

    string baseMenuClass = "navbar-collapse d-sm-inline-flex flex-sm-row-reverse";

    string NavMenuCssClass => baseMenuClass + (collapseNavMenu ? " collapse" : "");

    void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
