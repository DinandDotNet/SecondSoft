@page "/BarmateOverview"
<style>
    #barmateoverview .mycolor{
    color: @mycolor;
    }
</style>
<div id="barmateoverview" style="transform:scale(@scalesize)">
    <header>
        <h3><a class="mycolor" href="Barmate">Barmate</a></h3>
    </header>
    <a href="barmate" style="text-decoration:underline;">
        <img style="max-width:100%;" src="./Images/bar.jpg" /><br />
    </a>
    <p class="mycolor">Barmate is an order webapp for any bar or restaurant. </p>
    <div>
        <a href="secondsoft" class="dbutton btn btn-outline-dark mycolor" style="box-shadow: inset 0 0 0 2px @mycolor">Full Story</a>
    </div>
</div>



@code {
    [Parameter]
    public bool Carousel { get; set; } = true;
    [Parameter]
    public string scalesize { get; set; }
    [Parameter]
    public string mycolor { get; set; } = "black";
    protected override async Task OnParametersSetAsync()
    {
        if (Carousel)
        {
            scalesize = "0.7";
        }

    }
}

