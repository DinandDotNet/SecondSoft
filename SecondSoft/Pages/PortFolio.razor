@page "/PortFolio"

<link rel="icon" type="image/ico" href="./Images/Dinand.ico" />
<PageTitle>PortFolio Dinand</PageTitle>

<style>
    :root{
        --fontColor: white;
    }
    body {
        background-color: #222B31 !important;
    }
   
    h2{
        color:var(--fontColor);
    }

    h3, h3 a {
        color: black;
    }

    .headTitle {
        font-family: 'Source Sans Pro', Helvetica, sans-serif;
        font-size: 80px;
        font-weight: 900;
        text-transform: uppercase;
        color: var(--fontColor)
    }

    #intro {
        text-align: center;
        transform: translateY(2rem);
        margin-bottom: 240px;
    }

        #intro p {
            font-style: italic;
            padding-top: 1rem;
        }

    .sampleblock, .container > .dgrid {
        padding: 20px;
        --minmax: 240px;
    }

    #technologies > .dgrid {
        --minmax: 90px;
    }

    .dgrid > .dcard {
        font-size: 0.85em;
        text-align: center;
        background: #565353;
    }

    ul.actions {
        display: flex;
        cursor: default;
        list-style: none;
        margin-left: -1rem;
        padding-left: 0;
        justify-content: center;
    }

    .solid {
        position: relative;
        width: 4rem;
        height: 4rem;
        line-height: 4rem;
        border-radius: 4rem;
        /*text-indent: 4rem;*/
        overflow: hidden;
        padding: 0;
        white-space: nowrap;
        cursor: pointer;
        display: inline-block;
        text-align: center;
        list-style: none;
    }
    

</style>

<body class="is-preload">

    <!-- Wrapper -->
    <div id="wrapper" class="fade-in">

        <!-- Intro -->
        <div id="intro">
            <h1 class="headTitle">My Portfolio</h1>
            <p style="color:var(--fontColor);">A showcase of my projects and abilities</p>
            <ul class="actions ">
                <li>
                    <AnchorLink href="#Passioned" class="button solid"><i style="margin-left: 22px;margin-top:19px;" class="fa-solid fa-arrow-down fa-2x fa-inverse"></i></AnchorLink>
                </li>
            </ul>
        </div>
        <br />
        <!-- Nav -->
        <div class="upperblock maintext">I am Dinand</div>
        <div id="main">
            <!-- Featured Post -->
            <br />
            <div id="Passioned" class="maintext">
                <div style="margin: 0 auto 0 auto; font-size:1rem">
                    Passionate .net developer <br /> and <br /> software architect
                </div><br />
                <div style="width:250px; margin:auto;">
                    <a href="Dinand"><img style="width:100%;" src="images/code.jpg" alt="" /></a>
                </div>
                <div>
                    <ul class="actions special">
                        <li><a href="Dinand" class="button large">My story</a></li>
                    </ul>
                </div>
            </div>
            <div class="container">
                <div style="clear:both;"></div>
                <h2>Blazor projects</h2> <br />
                <section class="card-list" style="font-size: 0.85em;">

                    <div class="card">
                        <SecondsoftOverview Carousel=false />
                    </div>
                    <div class="card">
                        <BarmateOverview Carousel=false />
                    </div>
                    <div class="card">
                        <BlazorOverview Carousel=false />
                    </div>
                </section>
                <div style="clear:both"></div>
                <h2 class="body ">MVC projects</h2> <br />
                <section class="card-list" style="font-size: 0.85em;">

                    <div class="card ">
                        <FitmateOverview Carousel=false />
                    </div>
                    <div class="card ">
                        <SecondLogOverview Carousel=false />
                    </div>
                    <div class="card ">
                        <MicroPortalOverview Carousel=false />
                    </div>
                </section>

                <div style="clear:both; color:var(--fontColor);">
                    <br />
                    <div id="technologies">
                        Technologies used overall
                        <section class="dgrid">
                            <div class="dcard">Blazor</div>
                            <div class="dcard">MVC</div>
                            <div class="dcard">C#</div>
                            <div class="dcard">Razor</div>
                            <div class="dcard">Bootstrap</div>
                            <div class="dcard">HTML</div>
                            <div class="dcard">CSS</div>
                            <div class="dcard">XML</div>
                            <div class="dcard">Javascript</div>
                            <div class="dcard">Jquery</div>
                            <div class="dcard">SQL</div>
                            <div class="dcard">LinQ</div>
                        </section>
                    </div>
                </div>
            </div>
            <div style="clear:both;"></div>
            <Contact mycolor="white" />
            <br />
        </div>
    </div>
</body>

