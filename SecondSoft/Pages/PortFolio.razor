<style>
    :root {
        --fontColor: white;
        --fontSize: 0.85rem;
    }

    body {
        background-color: #222B31 !important;
    }
    #wrapper{
    color:var(--fontColor);
    }

    div.square {
        margin-top: 10px;
        margin-bottom: 50px;
        background: rgb(238,238,242);
        background: linear-gradient(90deg, rgba(238,238,242,1) 0%, rgba(6,6,31,1) 100%, rgba(0,212,255,1) 100%);
        width:80%;
       transform: skewY(-1deg);
    }

    .dfontSize {
        font-size: var(--fontSize);
    }

    h2, .dbutton, .dcolor {
        color: var(--fontColor);
    }

    .dbutton {
        box-shadow: inset 0 0 0 2px var(--fontColor);
    }
    .dbutton:hover{
            box-shadow: inset 0 0 0 2px #18bfef;
    }

    h3, h3 a {
        color: black;
    }
    .dheadline{
        font-size:4rem !important;

    }
    @@media screen and (max-width: 768px) {
        .dheadline {
            font-size: 2.25rem !important;
        }

    }

    #intro {
        text-align: center;
        transform: translateY(2rem);
        margin-bottom: 240px;
    }

        #intro p {
            font-style: italic;
            padding-top: 1rem;
        }

    #Passioned{
        text-transform: uppercase;
        text-align: center;
        text-decoration: none !important;
    }
    .sampleblock, .container > .dgrid {
        padding: 20px;
        --minmax: 240px;
    }

    #technologies > .dgrid {
        --minmax: 90px;
    }

    .dgrid > .dcard {
        font-size: 0.85em;
        text-align: center;
        background: #565353;
    }

    ul.actions {
        display: flex;
        cursor: default;
        list-style: none;
        margin-left: -1rem;
        padding-left: 0;
        justify-content: center;
    }

    .solid {
        position: relative;
        width: 4rem;
        height: 4rem;
        line-height: 4rem;
        border-radius: 4rem;
        overflow: hidden;
        padding: 0;
        white-space: nowrap;
        cursor: pointer;
        display: inline-block;
        text-align: center;
        list-style: none;
    }
   
</style>

