@page "/"

<style>
    body {
        background-color: white !important;
    }

    .dlogo {
        width: 426px;
        display: block;
        margin: 2.5rem 0;
       
    }

    .title {
        color: gray;
        font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
        font-size: 50px;
        text-align: center;
    }


    @@media screen and (max-width: 1200px) {
        .dlogo {
            width: 340px;
        }
        .title {
            font-size: 40px;
        }
    }

    @@media screen and (max-width: 992px) {
        .dlogo {
            width: 260px;
        }
        .title {
            font-size: 30px;
        }
    }

    @@media screen and (max-width: 768px) {
        .dlogo {
            width: 200px;
        }
        .title {
            padding-top: 23px;
            font-size: 20px;
        }
    }

    @@media screen and (max-width: 640px) {
        .title {
            float:right;
            font-size: 17px;
        }
    }
    @@keyframes fadeIn {
  10% { opacity: 0.15; }
  100% { opacity: 1; }
}

</style>
<link rel="icon" type="image/ico" href="./Images/logo/2ndSoftWhite.ico" />
<PageTitle>SecondSoft</PageTitle>
<div class="container">
    <div class="row">
        <div class="col-7 col-sm-4" style=" animation: fadeIn ease 15s;"><img src="@imageSource" class="dlogo" /></div>
        <div class=" col-4 col-sm-4 title"> Thinking twice makes the differents</div>
    </div>
</div>
<br />

<br />
<br />
<Carousel Components="types" DelayTime="5000" />
@code {
    private string? imageSource;
    protected override async Task OnParametersSetAsync()
    {
        ShowImage();
    }

    private void ShowImage()
    {
        imageSource = $"./images/logo/2ndsoft.png";
    }

    Type[] types =
    {
        typeof(BarmateOverview),
        typeof(FitmateOverview),
        typeof(MicroPortalOverview)
    };
}
