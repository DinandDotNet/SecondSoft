@page "/FitmateOverview"
<div style="transform:scale(@scalesize)">
    <header>
        <h3><a target="_blank" href="http://fitmate.secondsoft.nl/">Fitmate</a></h3>
    </header>
    <a target="_blank" href="http://fitmate.secondsoft.nl/" style="text-decoration:underline;">
        <img style="max-width:100%;" src="./Images/Group1.jpg" /><br />
    </a>
    <p>
        A gym program. Members can track and review their performance. Gyms can monitor and ajust the
        developments of their members..
    </p>
    <div>
        <a target="_blank" href="http://fitmate.secondsoft.nl/" class="btn btn-outline-dark dbutton ">
            Fitmate &nbsp;<i class="fa-solid fa-up-right-from-square"></i>
        </a>
    </div>
</div>

@code {
    [Parameter]
    public bool Carousel { get; set; } = true;
    [Parameter]
    public string scalesize { get; set; } = "1.0";

    protected override async Task OnParametersSetAsync()
    {
        if (Carousel)
        {
            scalesize = "0.7";
        }

    }
}
